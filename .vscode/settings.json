{
  "markdownlint.config": {
    "MD012": false,
    "MD022": false,
    "MD033": false,
    "MD041": false,
    "MD045": false
  },
    // Python formatting with Black
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "black-formatter.args": [
        "--line-length=120"
    ]
}
